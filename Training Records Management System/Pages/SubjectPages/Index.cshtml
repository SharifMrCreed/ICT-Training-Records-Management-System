@page
@model Training_Records_Management_System.Pages.SubjectPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="text-center h1">
     Subjects
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].Title)
            </th>
            <th class="text-end">
                <a class="btn btn-primary" asp-page="Create">Add New Subject</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subject)
        {
            <tr>

                <td>
                    <a id="clickablerow" asp-page="./Details" asp-route-id="@item.ID">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>

                </td>
                <td class="text-end">
                    <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
