@page "{handler?}"
@using ICT_TRMS.Models
@model Training_Records_Management_System.Pages.SubjectPages.IndexModel

@{
    ViewData["Title"] = "Index";
    var anotherItem = new Subject();
}

<div class="text-center h1">
    Subjects
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].Title)
            </th>
            <th class="text-end" style="width: 15%">
                <a class="btn btn-primary" asp-page="Create">Add New Subject</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subject)
        {
            <tr>

                <td>
                    <a id="clickablerow" asp-page="./Edit" asp-route-id="@item.ID">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>

                </td>
                <td class="text-end">
                    <a id = "deleteclick" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.ID">
                        <img src="~/bin.png">

                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Are you sure you would like to delete this subject?
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        Name
                    </dt>
                    <dd class="col-sm-10">
                        <span id="title"></span>
                    </dd>
                </dl>
                <br />
            </div>
            <div class="modal-footer">

                <form method="post">
                    <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Cancel</button>
                    <input type="hidden" asp-for="Subj.ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

        $('#deleteclick').on('click', function () {
            $.getJSON(`Index/subjectAsJson?id=${$(this).data('id')}`).done(function (subject) {
                $('#title').text(subject.Title);
                $('#id').text(subject.ID);
            });
        });


</script>