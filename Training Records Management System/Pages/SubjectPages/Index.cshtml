@page
@model Training_Records_Management_System.Pages.SubjectPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="text-center h1">
    Subjects
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].Title)
            </th>
            <th class="text-end" style="width: 15%">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    New Subject
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subject)
        {
            <tr>

                <td>
                    <a id="clickablerow" asp-page="./Edit" asp-route-id="@item.ID">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>

                </td>
                <td class="text-end">
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">
                        <img src="~/bin.png" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">New Subject</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-page-handler="create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <label asp-for="Sub.Title" class="control-label h4"></label>
                        <input asp-for="Sub.Title" class="form-control" />
                        <span asp-validation-for="Sub.Title" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="text-end">

                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>